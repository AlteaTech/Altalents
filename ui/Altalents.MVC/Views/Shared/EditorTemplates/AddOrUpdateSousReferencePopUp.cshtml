@model SousReferenceDto

<div class="k-edit-form-container">
    <div class="k-edit-label">
        @Html.LabelFor(model => model.LibelleFr, LibellesResources.ReferenceLibelleFr)
    </div>
    <div class="k-edit-field">
        @Html.Kendo().TextBoxFor(model => model.LibelleFr)
        @Html.ValidationMessageFor(model => model.LibelleFr)
    </div>
    <div class="k-edit-label">
        @Html.LabelFor(model => model.OrdreFr, LibellesResources.ReferenceOrdreFr)
    </div>
    <div class="k-edit-field">
        @Html.Kendo().IntegerTextBoxFor(model => model.OrdreFr).Min(1)
        @Html.ValidationMessageFor(model => model.OrdreFr)
    </div>    
    @if ((bool)ViewData["WithSecondeLangue"])
    {
        <div class="k-edit-label">
            @Html.LabelFor(model => model.Libelle2, LibellesResources.ReferenceLibelle2)
        </div>
        <div class="k-edit-field">
            @Html.Kendo().TextBoxFor(model => model.Libelle2)
        @Html.ValidationMessageFor(model => model.Libelle2)
        </div>
        <div class="k-edit-label">
            @Html.LabelFor(model => model.Ordre2, LibellesResources.ReferenceOrdre2)
        </div>
        <div class="k-edit-field">
            @Html.Kendo().IntegerTextBoxFor(model => model.Ordre2).Min(1)
            @Html.ValidationMessageFor(model => model.Ordre2)
        </div>
    }
</div>
